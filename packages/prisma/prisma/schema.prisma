generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  apiKeys APIKey[]

  @@map("user")
}

enum UserRole {
  ADMIN
  USER
}

model APIKey {
  id        String   @id @default(uuid())
  name      String
  key       String   @unique
  isActive  Boolean  @default(true) @map("is_active")
  userId    String   @map("user_id")
  createdBy User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("api_key")
}

model AgentRegistry {
  id           String   @id @default(uuid())
  agentId      String   @map("agent_id") @unique
  agentVersion String   @map("agent_version")
  description  String?
  endpoint     Json
  inputSchema  Json?    @map("input_schema")
  outputSchema Json?    @map("output_schema")
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("agent_registry")
}
enum InstanceStatus {
  ACTIVE
  INACTIVE
  UNHEALTHY
  SPAWNING
}

model AgentInstance {
  id            String         @id @default(uuid())
  agentId       String         @map("agent_id") @unique
  agentVersion  String         @map("agent_version")
  endpoint      Json // { url: string, method: 'POST', timeout: number }
  status        InstanceStatus @default(SPAWNING)
  capacity      Int
  currentLoad   Int            @default(0) @map("current_load")
  lastHeartbeat DateTime       @default(now()) @map("last_heartbeat")
  metadata      Json?
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")

  @@map("agent_instance")
}